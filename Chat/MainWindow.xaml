<Window x:Class="Chat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="Chat" Height="650" Width="850">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="69" Margin="26,144,0,0" VerticalAlignment="Top" Width="170"/>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="418" VerticalAlignment="Top" Width="582" Margin="219,51,0,0"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="62" Margin="219,469,0,0" VerticalAlignment="Top" Width="582"/>
        <Button x:Name="MessageButton" Content="Enter the message" HorizontalAlignment="Left" Height="51" Margin="515,531,0,0" VerticalAlignment="Top" Width="211" Click="MessageButtonClick" FontFamily="Arial" FontSize="14" IsEnabled="False"/>
        <TextBox x:Name="MessageTextBox" HorizontalAlignment="Left" Height="62" Margin="219,469,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="582" FontFamily="Arial" FontSize="14" IsEnabled="False"/>
        <TextBox x:Name="SetNameTextBox" HorizontalAlignment="Left" Height="69" Margin="26,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" FontFamily="Arial" FontSize="14"/>
        <Button x:Name="SetNameButton" Content="Accept" HorizontalAlignment="Left" Height="65" Margin="26,213,0,0" VerticalAlignment="Top" Width="170" FontFamily="Arial" FontSize="14" Click="SetNameButtonClick" HorizontalContentAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="26,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" FontFamily="Arial" FontSize="14" TextAlignment="Center"><Run Text="Enter Your name"/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="ChatTextBlock" HorizontalAlignment="Left" Height="362" Margin="249,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="522" FontFamily="Arial" FontSize="14" Text=""/>

    </Grid>
</Window>
